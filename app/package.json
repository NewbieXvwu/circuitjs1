{
  "name": "circuitjs1",
  "version": "0.0.1",
  "description": "Interactive Circuit Simulator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64"
  },
  "repository": "https://github.com/sharpie7/circuitjs1",
  "keywords": [
    "eda",
    "electronics",
    "circuits",
    "education"
  ],
  "author": "Iain Sharp, Paul Falstad",
  "dependencies": {
    "@electron/remote": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lushprojects.circuitjs1",
    "productName": "CircuitJS1",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "war/icon512.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "war/**/*"
    ]
  }
}
